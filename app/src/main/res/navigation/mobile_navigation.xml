<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_settings"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstoneprojectg8.schoolscheduleapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.capstoneprojectg8.schoolscheduleapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.capstoneprojectg8.schoolscheduleapp.ui.settings.SettingsFragment"
        android:label="@string/title_settings" >
        <action
            android:id="@+id/action_navigation_settings_to_classesFragment"
            app:destination="@id/classesFragment" />
        <action
            android:id="@+id/action_navigation_settings_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
    </fragment>
    <fragment
        android:id="@+id/classesFragment"
        android:name="com.capstoneprojectg8.schoolscheduleapp.ui.settings.classes.ClassesFragment"
        android:label="@string/classFragment_title"
        tools:layout="@layout/fragment_classes" />
</navigation>